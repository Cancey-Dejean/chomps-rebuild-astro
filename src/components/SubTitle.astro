---
import { twMerge } from 'tailwind-merge'
interface Props {
  as: 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p'
  className?: string
}

const { className = '', as: Element = 'p' } = Astro.props
---

<Element
  class:list={twMerge(
    'font-secondary text-[2rem] leading-[2.8rem] md:text-[2.4rem]',
    className
  )}
>
  <slot />
</Element>
