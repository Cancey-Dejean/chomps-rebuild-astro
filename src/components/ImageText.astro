---
import { Image } from 'astro:assets'
import FuelImage from '../images/fuel-for-you.webp'
import Container from './Container.astro'
import SectionTitle from './SectionTitle.astro'
import SubTitle from './SubTitle.astro'
import Button from './Button.astro'
interface Props {
  title: string
  body: string
  href: string
}

const { href, title, body } = Astro.props
---

<section class="px-5 py-[60px] lg:px-[60px]">
  <Container
    className="flex flex-col md:flex-row items-start lg:items-center gap-[35px] lg:gap-[85px] max-w-[1271px] px-0"
  >
    <div class="flex-1">
      <Image src={FuelImage} alt="" />
    </div>
    <div class="flex-1">
      <div class="flex max-w-[500px] flex-col items-start">
        <div class="-ml-[72px] h-[180px] w-[180px] rotate-0 scale-[-1]">
          <dotlottie-player
            src="/src/data/lottie/lottie-arrow.json"
            background="transparent"
            speed="1"
            autoplay></dotlottie-player>
        </div>
        <SectionTitle as="h2" className="lg:text-4 mb-[26px]">
          Fuel For You and All You Do
        </SectionTitle>

        <SubTitle as="p">
          Give your inner nutritionist the day off. Our sticks are packed with
          flavor and free of the icky stuff. Keto friendly, Paleo certified, and
          gluten free!
        </SubTitle>

        <Button href="/" label="Shop All" className="mt-[59px] min-w-[300px]" />
      </div>
    </div>
  </Container>
</section>
